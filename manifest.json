{
  "manifest_version": 2,
  "name": "Trezor GPG",
  "description": "An extension to help using trezor as GPG tool in Thunderbird",
  "version": "1.0",
  "author": "yanganto@gmail.com",
  "applications": {
    "gecko": {
        "id": "yanganto@gmail.com",
        "strict_min_version": "78.0",
        "strict_max_version": "78.*"
    }
  },
  "homepage_url": "https://github.com/yanganto/trezor-gpg",
  "icons": {
    "48": "icons/trezor-gpg-48.png"
  },
  "message_display_action": {
    "default_popup": "decrypt_popup.html",
    "default_title": "Trezor GPG",
    "default_icon": "icons/trezor-gpg-48.png"
  },
  "compose_action": {
    "default_popup": "encrypt_popup.html",
    "default_title": "Trezor GPG",
    "default_icon": "icons/trezor-gpg-48.png"
  },
  "permissions": [
    "storage",
    "messagesRead",
    "messagesMove",
    "compose",
    "nativeMessaging"
  ]
}
